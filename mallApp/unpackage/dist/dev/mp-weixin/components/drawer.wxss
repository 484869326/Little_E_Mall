.title {
  font-weight: bold;
  font-size: 36rpx;
  padding-left: 20rpx;
}
page {
  background-color: #f2f2f2;
}
.image {
  display: block;
  width: 100%;
}
.mask {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
}
.drawer {
  position: fixed;
  width: 100%;
  padding: 20rpx 25rpx;
  bottom: 0;
  border-radius: 30rpx 30rpx 0 0;
  background-color: white;
  box-shadow: 0 6px 18px 0 rgba(60, 70, 79, 0.1);
  box-sizing: border-box;
  z-index: 2;
}
.drawer .close {
  position: absolute;
  right: 20rpx;
}