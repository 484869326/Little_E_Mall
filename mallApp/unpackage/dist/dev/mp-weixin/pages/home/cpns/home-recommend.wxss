.title {
  font-weight: bold;
  font-size: 36rpx;
  padding-left: 20rpx;
}
page {
  background-color: #f2f2f2;
}
.image {
  display: block;
  width: 100%;
}
.home-recommend {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  padding: 10rpx 20rpx;
}
.home-recommend .recommend-item {
  margin: 15rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.home-recommend .recommend-item .image {
  width: 120rpx;
}
.home-recommend .recommend-item .text {
  font-size: 24rpx;
  margin-top: 10rpx;
}