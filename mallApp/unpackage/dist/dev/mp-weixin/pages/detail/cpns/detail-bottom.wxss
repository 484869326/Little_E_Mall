.title {
  font-weight: bold;
  font-size: 36rpx;
  padding-left: 20rpx;
}
page {
  background-color: #f2f2f2;
}
.image {
  display: block;
  width: 100%;
}
.detail-bottom {
  position: fixed;
  padding: 16rpx 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
  width: 100%;
  bottom: 0;
  background-color: white;
  box-sizing: border-box;
}
.detail-bottom .icon-arr {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.detail-bottom .icon-arr .icon {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.detail-bottom .icon-arr .icon .text {
  font-size: 24rpx;
  color: #7e7e7e;
}
.detail-bottom .btn-group {
  flex: 1.8;
  display: flex;
}
.detail-bottom .btn-group button {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 48%;
  height: 100%;
  font-size: 28rpx;
  color: white;
  background-color: #f7c971;
  border-radius: 9999px;
  margin-right: 2%;
}
.detail-bottom .btn-group button:last-child {
  margin-left: 2%;
  margin-right: 0;
  background-color: #f3402b;
}