.title {
  font-weight: bold;
  font-size: 36rpx;
  padding-left: 20rpx;
}
page {
  background-color: #f2f2f2;
}
.image {
  display: block;
  width: 100%;
}
.detail-buy .good-detail {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.detail-buy .good-detail .good-image {
  width: 30%;
}
.detail-buy .good-detail .good-info {
  flex-grow: 1;
}
.detail-buy .good-detail .good-info .good-price {
  font-size: 40rpx;
  color: #f3402b;
  font-weight: bold;
}
.detail-buy .good-detail .good-info .good-name {
  padding-top: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.detail-buy .item-list {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
}
.detail-buy .item-list .item-box {
  margin-right: 20rpx;
  padding: 10rpx 48rpx;
  text-align: center;
  background: #f6f6f6;
  border: 1px solid #f6f6f6;
  border-radius: 9999rpx;
}
.detail-buy .item-list .item-box.active {
  background-color: #fbf2ed;
  border-color: #f3402b;
}
.detail-buy .item-list .item-box:last-child {
  margin-right: 0;
}
.detail-buy .good-num {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.detail-buy .button {
  width: 100%;
  margin-top: 30rpx;
  height: 80rpx;
  line-height: 76rpx;
  font-size: 30rpx;
  color: white;
  background-color: #f3402b;
  border-radius: 9999rpx;
}
.detail-buy .title {
  font-size: 30rpx;
  padding-left: 0;
}
.detail-buy .good-type,
.detail-buy .good-num,
.detail-buy .good-color {
  margin-top: 30rpx;
}